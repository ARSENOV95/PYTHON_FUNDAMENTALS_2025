def perfect_number(num: int):

    sum_devisors = 0

    for devisor in range(1,num):
        if num % devisor == 0:
            sum_devisors += devisor
    
    if sum_devisors == num:
        return "We have a perfect number!"
    return "It's not so perfect."   #when the if clause is true the return will execute and the rest of the program will not complete
                                    #when the if clause is false, then the row will be skipped 

    
number = int(input())
print(perfect_number(number))
 


    


